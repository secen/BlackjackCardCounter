<Window x:Class="BlackjackCardCounter.ReshufflePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackCardCounter"
        mc:Ignorable="d"
        Title="ReshufflePopup" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Are you sure you want to reshuffle the deck?" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Button x:Name="confirmButton" Content="Yes" Grid.Column="0" Grid.Row="1" MaxHeight="25" MaxWidth="100" VerticalAlignment="Center" Click="confirmButton_Click" />
        <Button x:Name="cancelButton" Content="No" Grid.Column="1" Grid.Row="1" MaxHeight="25" MaxWidth="100" VerticalAlignment="Center"  Click="cancelButton_Click"/>

    </Grid>
</Window>
